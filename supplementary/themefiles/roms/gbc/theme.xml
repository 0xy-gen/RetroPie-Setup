<theme>
	<listPrimaryColor>FFFFFF</listPrimaryColor>
	<descColor>FFFFFF</descColor>
	<listSelectorColor>000000</listSelectorColor>
	<hideHeader />
	<hideDividers />
	<listLeftAlign />

        <menuScrollSound>~/.emulationstation/themes/sounds/GS25.wav</menuScrollSound>
        <menuSelectSound>~/.emulationstation/themes/sounds/GS42.wav</menuSelectSound>
        <menuBackSound>~/.emulationstation/themes/sounds/GS28.wav</menuBackSound>
        <menuOpenSound>~/.emulationstation/themes/sounds/SNES5.wav</menuOpenSound>

        <component>
                <type>image</type>
                <path>~/.emulationstation/themes/gbc_art/gbc_bg.jpg</path>
                <pos>0 0</pos>
                <dim>1 1</dim>
		<tiled />
        </component>

        <component>
                <type>image</type>
                <path>~/.emulationstation/themes/gbc_art/plastic_glare.png</path>
                <pos>.5 .5</pos>
                <dim>0 1</dim>
		<origin>1 .5</origin>
		<useAlpha />
        </component>

        <component>
                <type>image</type>
                <path>~/.emulationstation/themes/gbc_art/gbc_logo.png</path>
                <pos>.25 0</pos>
                <dim>0 .125</dim>
		<origin>.5 0</origin>
		<useAlpha />
        </component>
</theme>