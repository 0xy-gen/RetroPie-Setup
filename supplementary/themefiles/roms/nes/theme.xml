        <component>
                <type>image</type>
                <path>~/.emulationstation/themes/nes_art/nes_bg_grey.jpg</path>
                <pos>0 .5</pos>
                <dim>.5 1</dim>
		<origin>0 .5</origin>
        </component>

        <component>
                <type>image</type>
                <path>~/.emulationstation/themes/nes_art/nes_logo.png</path>
                <pos>0 0</pos>
                <dim>.5 0</dim>
		<origin>0 0</origin>
