<theme>
	<listPrimaryColor>000000</listPrimaryColor>
	<descColor>000000</descColor>
	<listSelectorColor>000080</listSelectorColor>
	<hideHeader />
	<hideDividers />
	<listLeftAlign />

        <menuScrollSound>~/.emulationstation/themes/sounds/GS25.wav</menuScrollSound>
        <menuSelectSound>~/.emulationstation/themes/sounds/GS42.wav</menuSelectSound>
        <menuBackSound>~/.emulationstation/themes/sounds/GS28.wav</menuBackSound>
        <menuOpenSound>~/.emulationstation/themes/sounds/SNES5.wav</menuOpenSound>

        <component>
                <type>image</type>
                <path>~/.emulationstation/themes/gb_art/gb_bg.png</path>
                <pos>0 0</pos>
                <dim>1 1</dim>
		<tiled />
        </component>

        <component>
                <type>image</type>
                <path>~/.emulationstation/themes/gb_art/gb_divider.png</path>
                <pos>.5 .5</pos>
                <dim>.01 1</dim>
		<origin>.5 .5</origin>
		<useAlpha />
        </component>

        <component>
                <type>image</type>
                <path>~/.emulationstation/themes/gb_art/gb_logo.png</path>
                <pos>.25 .07</pos>
                <dim>.28 0</dim>
		<origin>.5 .5</origin>
		<useAlpha />
        </component>
</theme>